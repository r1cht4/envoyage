# Envoyage Control Plane Configuration
# Copy this file to .env and fill in your values.
# .env is gitignored — never commit real keys or IPs.

# ── WireGuard Topology ────────────────────────────────────────────────────────

# WireGuard IP assigned to the HOME node's wg0 interface.
# The VPS Envoy routes all traffic to this IP (through the WireGuard tunnel).
# Default "envoy-home" works for local Docker Compose simulation without WG.
ENVOYAGE_HOME_WG_IP=10.0.0.2

# Port the home Envoy listens on. VPS Envoy forwards to HOME_WG_IP:HOME_ENVOY_PORT.
ENVOYAGE_HOME_ENVOY_PORT=10000

# Public IP of your VPS. Used in the WireGuard peer config for the home node.
ENVOYAGE_VPS_PUBLIC_IP=

# WireGuard listen port on the VPS (UDP).
ENVOYAGE_WG_PORT=51820

# ── WireGuard Keys ────────────────────────────────────────────────────────────
# Generate with: wg genkey | tee privatekey | wg pubkey > publickey
# Run once on each host. Keep private keys SECRET.

ENVOYAGE_HOME_WG_PRIVATE_KEY=<generate: wg genkey>
ENVOYAGE_HOME_WG_PUBLIC_KEY=<generate: wg pubkey < privatekey>

ENVOYAGE_VPS_WG_PRIVATE_KEY=<generate: wg genkey>
ENVOYAGE_VPS_WG_PUBLIC_KEY=<generate: wg pubkey < privatekey>

# ── Control Plane ─────────────────────────────────────────────────────────────

# gRPC listen address for the xDS server.
ENVOYAGE_XDS_ADDR=:9090

# HTTP listen address for the management API.
ENVOYAGE_API_ADDR=:8080

# Envoy node IDs — must match node.id in the respective bootstrap YAML files.
ENVOYAGE_HOME_NODE_ID=envoyage-envoy-home
ENVOYAGE_VPS_NODE_ID=envoyage-envoy-vps
